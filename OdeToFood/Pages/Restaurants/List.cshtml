@page
@model OdeToFood.Pages.Restaurant.ListModel
@{
}
<h1>Restaurants</h1>

<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" asp-for="SearchTerm" />
            <span class="input-group-lg">
                <button class="btn btn-secondary">
                    <i class="fa fa-search">Search</i>
                </button>
            </span>
        </div>
    </div>
</form>

<table class="table">
    @foreach (var restaurant in Model.Restaurants)
    {
        <tr>
            <td>@restaurant.Name</td>
            <td>@restaurant.Location</td>
            <td>@restaurant.Cuisine</td>
            <td>
                <a class="btn btn-outline-primary"
                   asp-page="./Detail"
                   asp-route-restaurantId="@restaurant.Id">
                    <i class="glyphicon-zoom-in">Detail</i>
                </a>

                <a class="btn btn-outline-primary"
                   asp-page="./Edit"
                   asp-route-restaurantId="@restaurant.Id">
                    <i class="glyphicon-edit">Edit</i>
                </a>
            </td>
        </tr>
    }

</table>

<a asp-page="./Edit" class="btn btn-primary">Add New</a>
 
<div>@Model.Message</div>
